	<script>
		function hello(surprise) {
			surprise.style.backgroundColor = "green";
			alert("Hello World");
		}
		function funky(x){
			x.style.backgroundColor = "green";
			}
		function bye(){
			alert("Goodbye");
			}
		function how(){
			var sa=prompt("Who are you ?")
			alert("Hello " + sa);
		}
		function greenButton(thing){
			thing.style.backgroundColor = "green";
			}
			
		
		
	</script>
</head>
