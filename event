	<p><button id = "btnHello" onclick="hello(this)">Say Hello</button>
	<button id = "btnColourChange" onmouseout="funky(this)">Colour Changer</button></p>
	<button id="btnBye" onclick="bye()">GoodBye</button>
	<button onclick="how()">sayHello</button>
	<button onclick="greenButton(this)">green button</button>
	<button onclick="hello(btnHello)">Surprise</button>
	
